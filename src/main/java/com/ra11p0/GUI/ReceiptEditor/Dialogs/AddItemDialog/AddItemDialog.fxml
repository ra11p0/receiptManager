<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ra11p0.GUI.ReceiptEditor.Dialogs.AddItemDialog.AddItemDialogController"
      fx:id="root">
    <Label text="%selectItemOrCreateNewOneThenTypeQty"/>
    <Label text="%search"/>
    <TextField onKeyTyped="#searchBarKeyTyped"/>
    <ComboBox fx:id="itemsBox" promptText="%item"/>
    <Label text="%qty"/>
    <TextField fx:id="quantityField"/>
    <Button text="%createNewItem" onMouseClicked="#newItemButtonAction"/>
</VBox>
